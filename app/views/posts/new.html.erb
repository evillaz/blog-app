<%= form_with model: @post, url: user_posts_url, class: "form f c", method: :post, scope: :new_post, local: true do |f| %>
  <div class="title-form inputs f c">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="text-form inputs f c">
    <%= f.label :text %>
    <%= f.text_area :text %><br>
  </div>

  <div class="button-a f">
    <%= f.submit %>
  </div>
<% end %>